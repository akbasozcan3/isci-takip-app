{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "watchPatterns": [
      "**/*.js",
      "**/*.json",
      "package.json",
      "package-lock.json",
      "server.js",
      "Dockerfile",
      ".dockerignore",
      "controllers/**",
      "services/**",
      "routes/**",
      "core/**",
      "middleware/**",
      "modules/**",
      "config/**",
      "scripts/**"
    ]
  },
  "deploy": {
    "startCommand": "node server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "region": "us-west",
    "numReplicas": 1
  }
}

